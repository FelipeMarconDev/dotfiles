# /bin/screen -d -RR -q

term screen-256color
startup_message off
altscreen on
hardcopy_append on
defscrollback 9001
maptimeout 50

bind j focus next
bind k focus prev
bind s split
bind q only
bind x remove
bind X lockscreen
bind , title

# man screen(1) /^STRING ESCAPES
caption splitonly '%{= kd} %-Lw%{+b kW}|%n%f %t|%{= kd}%+Lw %-=%S %{.g} %u@%H %{.W} %d/%m %0c %{-}'
caption splitonly '%{= dd} %-Lw%{+b .7}|%n%f %t|%{= dd}%+Lw %-= %u@%H %d/%m %0c '
